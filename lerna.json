{
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
       "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"],
      "hoist": true
    },
    "version": {
      "conventionalCommits": true
    }
  },
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "npm"
}
